<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OddsActivity"
    android:background="@drawable/background_odds"
    >

    <ImageView
        android:id="@+id/imageViewCountryIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/country"
        app:layout_constraintTop_toTopOf="@id/textViewSportTitleHeader"
        app:layout_constraintBottom_toBottomOf="@id/textViewSportTitleHeader"
        app:layout_constraintEnd_toStartOf="@id/textViewSportTitleHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.8" />

    <TextView
        android:id="@+id/textViewSportTitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TÃ­tulo Deporte" />

    <ImageView
        android:id="@+id/imageViewLeagueIcon"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/league"
        app:layout_constraintTop_toTopOf="@id/textViewSportTitleHeader"
        app:layout_constraintBottom_toBottomOf="@id/textViewSportTitleHeader"
        app:layout_constraintStart_toEndOf="@id/textViewSportTitleHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOdds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSportTitleHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_odds_card" />

</androidx.constraintlayout.widget.ConstraintLayout>